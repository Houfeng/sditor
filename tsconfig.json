{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "maxNodeModuleJsDepth": 4,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2017"
    ],
  },
  "include": [
    "./src/**/*"
  ]
}